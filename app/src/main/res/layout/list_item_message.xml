<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        >

        <ImageView
            android:id="@+id/list_item_message_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/list_item_message_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_message_avatar"
            android:layout_marginBottom="3dp"
            android:text="@string/display_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black_transparent"
            />

        <TextView
            android:id="@+id/list_item_message_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_message_avatar"
            android:layout_below="@id/list_item_message_displayName"
            android:layout_marginBottom="3dp"
            android:text="13/12/2016"
            android:textSize="14sp"
            android:textColor="@color/grey"
            />

        <TextView
            android:id="@+id/list_item_message_sentReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_message_avatar"
            android:layout_below="@id/list_item_message_createdAt"
            android:text="Received"
            android:textSize="12sp"
            android:textColor="@color/grey"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>