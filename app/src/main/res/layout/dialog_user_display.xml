<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ImageView
        android:id="@+id/dialog_user_display_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        />

    <!-- TODO: replace all meaningless text with tools:text -->

    <TextView
        android:id="@+id/dialog_user_display_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dialog_user_display_avatar"
        android:layout_alignTop="@id/dialog_user_display_avatar"
        android:layout_alignBottom="@id/dialog_user_display_avatar"
        android:gravity="center_vertical"
        tools:text="Display Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black_transparent"
        />

</RelativeLayout>